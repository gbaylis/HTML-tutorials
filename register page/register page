<!-- 1st row, text line, ask for name  -->
  <!-- label id and input for, always match -->
  <label for="First Name"> First name: </label>
  <input name="first id="First Name:" type="text" placeholder="First Name" required> 
  
  <label for="Last Name"> Last Name: </label>
  <input name="last id="Last Name:" type="text" placeholder="Last Name" required>
  
</form> 
    
   <!-- 2nd row, radio button, gender, a new form tag  -->
 
  <form>
    <label for="male"> Male: </label>
    <input id="male" type="radio"> 
    
    <label for="female"> Female: </label>
    <input id="female" type="radio"> 
    
